<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        xmlns:tools="http://schemas.android.com/tools">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="10dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/userprofil"
            android:id="@+id/image_chatlog_ToItem"/>

    <androidx.cardview.widget.CardView
            android:layout_marginStart="8dp"
            app:cardCornerRadius="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_chatlog_ToItem"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:padding="@dimen/space_4"
                android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/text_chatTo"
                    android:maxWidth="240dp"
                    android:layout_alignParentStart="true"
                    android:textAlignment="textStart"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    android:text="Assalamualaikum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/timechatto"
                    android:maxWidth="240dp"
                    android:layout_below="@id/text_chatTo"
                    android:layout_alignStart="@id/text_chatTo"
                    android:textAlignment="textStart"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/black"
                    tools:text="20:00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>