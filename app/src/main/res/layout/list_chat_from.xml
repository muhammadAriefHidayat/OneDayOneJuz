<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:tools="http://schemas.android.com/tools">


    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/userprofil"
            android:id="@+id/image_chatlog_ToItem"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/cardv"
            app:cardBackgroundColor="@color/userBalonchat"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="2dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/image_chatlog_ToItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView
                    android:maxWidth="240dp"
                    android:id="@+id/message_chatlog_from"
                    android:textColor="@color/white"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    tools:text="Selamat Menunaikan Ibadah puasa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>