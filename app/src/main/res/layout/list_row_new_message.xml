<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/newMessage_imageview"
            android:src="@drawable/usersetting"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:layout_width="55dp"
            android:layout_height="55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/userName"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/newMessage_imageview"
            tools:text="Username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/newMessage_imageview"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/newMessage_imageview"/>
    <TextView
            android:id="@+id/statusGrup"
            android:textSize="14sp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/newMessage_imageview"
            tools:text="Status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/newMessage_imageview"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/userName"/>
</androidx.constraintlayout.widget.ConstraintLayout>