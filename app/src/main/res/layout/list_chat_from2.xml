<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_chatlog_ToItem"
            android:layout_width="45dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            app:srcCompat="@drawable/userprofil" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cardv"
            android:layout_marginVertical="@dimen/space_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toLeftOf="@id/image_chatlog_ToItem"
            app:cardBackgroundColor="@color/userBalonchat"
            app:cardCornerRadius="8dp">

        <RelativeLayout
                android:padding="@dimen/space_4"
                android:textAlignment="viewEnd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/message_chatlog_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textAlignment="viewEnd"
                        android:maxWidth="240dp"
                        android:textColor="@color/white"
                        tools:text="Assalamualaikum" />

                <TextView
                        android:id="@+id/timechat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_gravity="center_vertical"
                        android:text="20:00"
                        android:textColor="#CBEACB" />
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>