<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:background="#ffffff"
        android:paddingVertical="@dimen/space_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView

            android:layout_marginStart="8dp"
            android:id="@+id/imageUser_ListSetoran"
            android:src="@drawable/usersetting"
            android:layout_width="48dp"
            android:layout_height="48dp"/>

    <TextView
            android:textStyle="bold"
            android:id="@+id/namaUser_ListSetoran"
            android:layout_marginTop="3dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/imageUser_ListSetoran"
            tool:text="name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tanggalsetoran_ListSetoran"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/namaUser_ListSetoran"
            android:layout_toEndOf="@+id/imageUser_ListSetoran"
            tool:text="Tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/pemisah"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/namaUser_ListSetoran"
            android:layout_toEndOf="@+id/tanggalsetoran_ListSetoran"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    

    <TextView
            android:textStyle="bold"
            android:id="@+id/nomorJus_ListSetoran"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:layout_below="@id/namaUser_ListSetoran"
            android:layout_toEndOf="@+id/pemisah"
            tool:text="Nomor Jus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/jus_listSetoran"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:layout_below="@id/namaUser_ListSetoran"
            android:layout_toEndOf="@+id/nomorJus_ListSetoran"
            android:text="Selesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>