<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tool="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/space_4"
        android:paddingVertical="@dimen/space_4"
        android:layout_marginTop="8dp"
        android:background="#EDEDED"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_weight="1"
            android:id="@+id/tanggalsetoran_ListSetoran"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            tool:text="Tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:layout_weight="1"
            android:id="@+id/pemisah"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    

    <TextView
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/nomorJus_ListSetoran"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"
            tool:text="Nomor Jus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_weight="1"
            android:id="@+id/jus_listSetoran"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_baseline_check_circle_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>