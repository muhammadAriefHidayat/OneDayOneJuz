<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_chatlog_ToItem"
            android:layout_width="45dp"
            android:layout_height="5dp"
            android:layout_marginVertical="@dimen/space_1"
            android:layout_marginStart="10dp"

            app:srcCompat="@drawable/userprofil" />

    <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/space_1"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@id/image_chatlog_ToItem"
            android:background="@color/white"
            app:cardCornerRadius="8dp">

        <RelativeLayout
                android:padding="@dimen/space_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


            <TextView
                    android:id="@+id/text_chatTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_toEndOf="@id/timechatto"
                    android:maxWidth="240dp"
                    android:text="Assalamualaikum"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

            <TextView
                    android:id="@+id/timechatto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"
                    android:textAlignment="textStart"
                    android:textColor="#5E5E5E"
                    tools:text="20:00" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>