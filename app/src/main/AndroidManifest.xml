<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.odoj.onedayonejuzapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/icon"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/icon"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity android:name=".Activity.Chat.ChatLogActivity"
                  android:parentActivityName=".Activity.Utama.DashBoard">
        </activity>
        <activity
                android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
                android:theme="@style/Base.Theme.AppCompat"/>

        <activity android:name=".Activity.Utama.AboutActivity"/>
        <activity android:name=".Activity.Setting.SettingActivity"
                  android:parentActivityName=".Activity.Utama.DashBoard"/>
        <activity
                android:name=".Activity.DaftarLogin.LoginActivity"
                android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
                android:name=".Activity.DaftarLogin.DaftarActivity"
                android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".Activity.Utama.MainActivity"/>
        <activity
                android:name=".Activity.Chat.NewMessageActivity"
                android:parentActivityName=".Activity.Utama.DashBoard"/>
        <activity
                android:name=".Activity.Setting.EditStatusActivity"
                android:parentActivityName=".Activity.Setting.SettingActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".Activity.Utama.DashBoard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>